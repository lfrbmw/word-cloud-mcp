{
  "compilerOptions": {
    // 基础编译选项
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ES2020", "DOM"],
    
    // 输出配置
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    
    // 严格类型检查
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "exactOptionalPropertyTypes": true,
    
    // 模块解析
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    
    // 实验性功能
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    
    // 其他选项
    "skipLibCheck": true,
    "allowJs": false,
    "checkJs": false,
    "incremental": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    
    // 路径映射
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@/types/*": ["types/*"],
      "@/utils/*": ["utils/*"],
      "@/extractors/*": ["extractors/*"],
      "@/wordcloud/*": ["wordcloud/*"]
    }
  },
  
  // 包含的文件
  "include": [
    "src/**/*",
    "src/**/*.ts",
    "src/**/*.d.ts"
  ],
  
  // 排除的文件
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "test-*",
    "*.config.js",
    "*.config.ts"
  ],
  
  // TypeScript 编译器选项
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}